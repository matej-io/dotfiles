{
	"title": "Vim small SpaceFN modifiers",
	"rules": [
		{
			"description": "SpaceFN: Vim delete char in front Space-x",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "x",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "delete_forward"
						}
					],
					"conditions": [
						{
							"type": "variable_if",
							"name": "spacefn_mode",
							"value": 1
						}
					]
				}
			]
		},
		{
			"description": "SpaceFN: Vim select (for replace) char in front Space-r",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "r",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "right_arrow",
							"modifiers": [
								"option",
								"right_shift"
							]
						}
					],
					"conditions": [
						{
							"type": "variable_if",
							"name": "spacefn_mode",
							"value": 1
						}
					]
				}
			]
		},
		{
			"description": "SpaceFN: Vim delete till end of line, Space+c",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "c",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "k",
							"modifiers": [
								"right_control"
							]
						}
					],
					"conditions": [
						{
							"type": "variable_if",
							"name": "spacefn_mode",
							"value": 1
						}
					]
				}
			]
		},
		{
			"description": "SpaceFN: Vim jump to end of line Space + $",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "4",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "e",
							"modifiers": [
								"right_control"
							]
						}
					],
					"conditions": [
						{
							"type": "variable_if",
							"name": "spacefn_mode",
							"value": 1
						}
					]
				}
			]
		},
		{
			"description": "SpaceFN: Vim jump to beginning of line Space + 0",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "0",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "a",
							"modifiers": [
								"right_control"
							]
						}
					],
					"conditions": [
						{
							"type": "variable_if",
							"name": "spacefn_mode",
							"value": 1
						}
					]
				}
			]
		},
		{
			"description": "SpaceFN: Vim jump to beginning of line Space + ^",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "6",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "a",
							"modifiers": [
								"right_control"
							]
						}
					],
					"conditions": [
						{
							"type": "variable_if",
							"name": "spacefn_mode",
							"value": 1
						}
					]
				}
			]
		}
	]
}
