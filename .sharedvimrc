set number
set relativenumber
set smartindent
set noexpandtab
set tabstop=3
set shiftwidth=0
set softtabstop=0

imap <c-j> <esc>
nmap <c-j> <esc>
vmap <c-j> <esc>
cmap <c-j> <esc>

" Insert forgotten let for constant
imap <c-l> <esc>bilet <esc>wwi
nmap <c-l> bilet <esc>ww

" Insert missed open bracket in parameter
imap <c-9> <esc>F:lli(<esc>f,i
nmap <c-9> F:lli(<esc>f,

" Insert missed self. at the beginning of expression
imap <c-h> <esc>biself.<esc>ww
nmap <c-h> biself.<esc>ww

" Quick search to center result on a page
nnoremap * *zz
nnoremap # #zz
nnoremap n nzz
nnoremap N Nzz

inoremap <c-p> <esc>pa

nnoremap zz zt<c-y><c-y><c-y><c-y><c-y><c-y><c-y><c-y><c-y><c-y><c-y><c-y>

